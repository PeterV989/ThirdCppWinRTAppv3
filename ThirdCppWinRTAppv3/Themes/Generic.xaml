<!-- Themes/Generic.xaml -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThirdCppWinRTAppv3">

    <Style TargetType="local:CalcButton" >
        <Setter Property="ButtonBackground" Value="#FF413D3C" />
        <Setter Property="TopForeground" Value="#FFFF0000" />
        <Setter Property="BottomFontWeight" Value="Normal" />
        <Setter Property="BottomForeground" Value="#FF58ADC9" />
        <Setter Property="TopFontWeight" Value="Bold" />
        <!--<Setter Property="PointerOverColor" Value="#FF312C2C" />-->
        <Setter Property="PointerOverColor" Value="#FFFFFFFF" />

    </Style>

</ResourceDictionary>
